{
  "name": "citatype",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"pnpm dev:honox\" \"pnpm dev:css\"",
    "dev:honox": "vite --port 3000",
    "dev:css": "tailwindcss -i ./app/app.css -o ./public/tailwind.css --watch",
    "build": "pnpm build:css && vite build --mode client && vite build",
    "build:css": "tailwindcss -i ./app/app.css -o ./public/tailwind.css",
    "preview": "pnpm build && wrangler dev --env preview",
    "deploy": "pnpm build && wrangler deploy",
    "typecheck": "tsgo",
    "lint": "oxlint . && oxfmt --check .",
    "fix": "oxlint . --fix && oxfmt --write .",
    "test": "pnpm build:css && vitest run --project node --project dom --project browser --project a11y",
    "test:core": "vitest run --project node --project dom",
    "test:browser": "pnpm build:css && vitest run --project browser",
    "test:a11y": "pnpm build:css && vitest run --project a11y",
    "test:visual": "pnpm build:css && vitest run --project visual",
    "test:visual:update": "pnpm build:css && vitest run --project visual --update",
    "capture": "pnpm run --silent test:visual:update",
    "test:setup": "playwright install",
    "ready": "pnpm fix && pnpm typecheck && pnpm test",
    "ready:check": "pnpm lint && pnpm typecheck && pnpm test"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/standard-validator": "^0.2.2",
    "class-variance-authority": "^0.7.1",
    "hono": "^4.11.5",
    "honox": "^0.1.53",
    "typengine": "^0.0.5",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.9.2",
    "@hono/vite-dev-server": "^0.24.1",
    "@tailwindcss/cli": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^25.0.10",
    "@typescript/native-preview": "7.0.0-dev.20260130.1",
    "@vitest/browser": "^4.0.16",
    "@vitest/browser-playwright": "^4.0.16",
    "axe-core": "^4.11.1",
    "concurrently": "^9.2.1",
    "happy-dom": "^20.3.9",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "playwright": "^1.57.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.16",
    "wrangler": "^4.59.3"
  },
  "packageManager": "pnpm@10.8.1"
}
