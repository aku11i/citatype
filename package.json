{
  "name": "daken-mania",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"pnpm dev:server\" \"pnpm dev:css\" \"pnpm dev:client-components\"",
    "dev:server": "tsx watch src/server.ts",
    "dev:css": "tailwindcss -i ./src/app.css -o ./public/tailwind.css --watch",
    "dev:client-components": "tsdown --watch",
    "build:client-components": "tsdown",
    "typecheck": "tsgo",
    "fix": "echo \"No fix step configured\"",
    "test": "vitest run"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@hono/standard-validator": "^0.2.1",
    "hono": "^4.11.3",
    "typengine": "^0.0.2",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^25.0.3",
    "@typescript/native-preview": "7.0.0-dev.20251230.1",
    "@vitest/browser": "^4.0.16",
    "@vitest/browser-playwright": "^4.0.16",
    "concurrently": "^9.2.1",
    "happy-dom": "^20.0.11",
    "playwright": "^1.57.0",
    "tailwindcss": "^4.1.18",
    "tsdown": "^0.14.1",
    "tsx": "^4.21.0",
    "vitest": "^4.0.16"
  }
}
