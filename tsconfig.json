{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["@vitest/browser"]
  },
  "include": ["src", "vitest.setup.browser.ts", "vitest.setup.dom.ts", "vitest.setup.a11y.ts"]
}
